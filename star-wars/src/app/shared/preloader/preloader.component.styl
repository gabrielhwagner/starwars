@import '../../../assets/stylus/utils.styl';

[data-component='preloader']
	position fixed
	z-index 30
	display none
	width 100%
	height 100%
	.overlay
		position fixed
		background-image url('../../../assets/images/header.jpg')
		top 0
		left 0
		width 100%
		height 100%
		margin auto
		z-index 9000
		overflow hidden

	.content-img
		position absolute
		z-index 9999
		text-align center
		width 100%
		height 100%
		overflow hidden
		img 
			position absolute
			left 0
			right 0
			margin auto
			top 0
			bottom 0
		span 
			color white
			position absolute
			left 0
			right 0
			bottom 0
			top 180px
			margin auto
			height 20px
			letter-spacing 2px
 